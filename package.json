{
    "name": "@captor/quantlib",
    "version": "0.0.1",
    "description": "Quantlib for NodeJS through WebAssembly",
    "main": "index.js",
    "scripts": {
        "test": "jest quantlib.test.js --detectOpenHandles --maxWorkers=1 --forceExit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CaptorAB/node-quantlib.git"
    },
    "keywords": [
        "Quantlib",
        "Node",
        "WebAssembly"
    ],
    "author": "captor.se",
    "license": "BSD-3-Clause-Attribution",
    "bugs": {
        "url": "https://github.com/CaptorAB/node-quantlib/issues"
    },
    "homepage": "https://github.com/CaptorAB/node-quantlib#readme",
    "devDependencies": {
        "jest": "^24.8.0",
        "jest-cli": "24.8.0",
        "eslint": "5.12.0",
        "eslint-config-prettier": "^4.0.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-jest": "^22.3.2",
        "prettier-eslint-cli": "4.7.1"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ],
        "verbose": true,
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/coverage/**",
            "!.eslintrc.js"
        ]
    },
    "eslintIgnore": [],
    "prettier": {
        "printWidth": 140,
        "semi": true,
        "tabWidth": 4,
        "bracketSpacing": true,
        "arrowParens": "always"
    }
}
