{
    "name": "quantlib-wasm",
    "version": "0.0.6",
    "description": "A WebAssembly implementation of QuantLib for use in browser and Node.js",
    "main": "index.js",
    "scripts": {
        "test": "jest quantlib.test.js --detectOpenHandles --maxWorkers=1 --forceExit",
        "build:wasm": "cross-var docker run -v $INIT_CWD:/src -it --rm captorab/emscripten-quantlib:1.16.1 /bin/bash -c \"emcc --bind -I${EMSCRIPTEN}/system/include -I${QUANTLIB} -I${BOOST} -O3 -s MODULARIZE=1 -s \"EXTRA_EXPORTED_RUNTIME_METHODS=['addOnPostRun']\" -s EXPORT_NAME=QuantLib -s TOTAL_MEMORY=64MB -o dist/quantlib.js quantlib-embind.cpp ${QUANTLIB}/ql/.libs/libQuantLib.a\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CaptorAB/node-quantlib.git"
    },
    "keywords": [
        "quantlib",
        "wasm",
        "webassembly",
        "quantitative",
        "finance"
    ],
    "author": "captor.se",
    "license": "BSD-3-Clause-Attribution",
    "bugs": {
        "url": "https://github.com/CaptorAB/node-quantlib/issues"
    },
    "homepage": "https://github.com/CaptorAB/node-quantlib#readme",
    "devDependencies": {
        "cross-var": "^1.1.0",
        "eslint": "5.12.0",
        "eslint-config-prettier": "^4.0.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-jest": "^22.3.2",
        "jest": "^24.8.0",
        "jest-cli": "24.8.0",
        "prettier-eslint-cli": "4.7.1"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/coverage/**",
            "!.eslintrc.js"
        ]
    },
    "eslintIgnore": [],
    "prettier": {
        "printWidth": 140,
        "semi": true,
        "tabWidth": 4,
        "bracketSpacing": true,
        "arrowParens": "always"
    }
}
