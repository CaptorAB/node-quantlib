	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Run main",
			"program": "${workspaceFolder}\\main.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest Tests",
			"program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
			"args": ["-i", "-t", "Date"],
			"preLaunchTask": null,
			"internalConsoleOptions": "openOnSessionStart",
			"outFiles": ["${workspaceRoot}/dist/**/*"],
			"envFile": "${workspaceRoot}/.env"
		}
	]
}
